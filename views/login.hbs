<div class="box">
  <form method="POST" class="form" action="/login/postLogin">
    <div class="form-group">
      <h3 class="text-center">Sign In</h3>
    </div>
    <div class="form-group">
      <label for="username">Username</label>
      <input type="text" class="form-control" id="username" value="{{this.value.username}}" name="username" placeholder="Username">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" name="password" value="{{this.value.password}}" id="password" placeholder="Password">
    </div>
    <div class="form-group form-check">
      <input type="checkbox" class="form-check-input" name="remember" id="Remember">
      <label class="form-check-label" for="Remember">Remember password</label>
    </div>
    <button type="submit" class="btn btn-primary">Sign In</button>
  </form>
</div>